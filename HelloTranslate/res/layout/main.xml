<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:id="@+id/translatedText"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="@string/hello" />
	<EditText android:layout_width="match_parent" android:id="@+id/translateText"
		android:layout_height="wrap_content">
		<requestFocus></requestFocus>
	</EditText>
	<Button android:text="Translate this.." android:layout_width="fill_parent"
		android:id="@+id/translatebutton" android:layout_height="wrap_content"></Button>

	<ScrollView
		android:layout_height="fill_parent" android:layout_width="fill_parent">>
		<TableLayout android:id="@+id/translateTableLayout"
			android:layout_height="fill_parent" android:layout_width="wrap_content">

		</TableLayout>
	</ScrollView>
</LinearLayout>
